<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/avatar_comentario"
            android:layout_width="70dp"
            android:layout_height="70dp"
            />
        <TextView
            android:text="Fenando"
            style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
            android:textStyle="bold"
            android:id="@+id/nome_comentario"
            android:layout_toRightOf="@id/avatar_comentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Livro muito ruim"
            style="@style/Base.TextAppearance.AppCompat.SearchResult.Subtitle"
            android:id="@+id/mensagem_comentario"
            android:layout_toRightOf="@id/avatar_comentario"
            android:layout_width="wrap_content"
            android:layout_below="@id/nome_comentario"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>